{
  "name": "air-quality-ui",
  "version": "1.0.0",
  "description": "Lightweight Air Quality Monitoring UI for RPi3",
  "main": "index.html",
  "scripts": {
    "dev": "concurrently \"npm run watch-css\" \"npm run serve\"",
    "build": "npm run build-css && npm run build-js",
    "build-css": "tailwindcss -i ./src/css/input.css -o ./dist/css/style.css --minify",
    "build-js": "terser ./src/js/main.js -o ./dist/js/bundle.js --compress --mangle",
    "watch-css": "tailwindcss -i ./src/css/input.css -o ./dist/css/style.css --watch",
    "serve": "python3 -m http.server 5173 --directory .",
    "clean": "rm -rf dist/* node_modules",
    "install-deps": "npm install",
    "start": "npm run build && npm run serve"
  },
  "keywords": ["air-quality", "rpi3", "alpinejs", "tailwindcss"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.3.6",
    "terser": "^5.24.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "chart.js": "^4.4.0"
  }
}